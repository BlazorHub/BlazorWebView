@using Microsoft.AspNetCore.Components.Web
@namespace BlazorWebKit.Test

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button @onclick="IncrementCount">Click me</button>

@code {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
        StateHasChanged();
    }
}